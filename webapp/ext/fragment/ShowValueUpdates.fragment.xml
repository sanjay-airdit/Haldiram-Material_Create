<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
>
    <ResponsivePopover
        id="myFooterPopover"
        title="Changed Values"
        class="sapUiContentPadding"
        placement="PreferredLeftOrFlip"
        contentWidth="650px"
        contentHeight="300px"
        horizontalScrolling="false"
        resizable="false"
    >
        <content>
            <VBox class="sapUiSmallMargin">
                <Table
                    id="changesTable"
                    inset="false"
                    items="{localReqLog>/}"
                    enableBusyIndicator="true"
                    noDataText="The request is still in draft status...we couldn't find any data."
                >
                    <columns>
                        <Column>
                            <Text text="Field Name" />
                        </Column>
                        <Column>
                            <Text text="Old Value" />
                        </Column>
                        <Column>
                            <Text text="New Value" />
                        </Column>
                        <Column>
                            <Text text="Changed By" />
                        </Column>

                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <Text text="{localReqLog>field}" />
                                <Text text="{localReqLog>value_old}" />
                                <Text text="{localReqLog>value_new}" />
                                <Text text="{localReqLog>changed_by}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>

        <footer>
            <OverflowToolbar>
                <content>
                    <ToolbarSpacer />
                    <Button
                        text="Close"
                        press="onCloseshowChanges"
                    />
                </content>
            </OverflowToolbar>
        </footer>
    </ResponsivePopover>
</core:FragmentDefinition>
