<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:upload="sap.m.upload"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">
    <Dialog title="Duplicate Check" contentWidth="75%" contentHeight="75%" class="sapUiSmallMargin">
        <customHeader>
            <Toolbar>
                <Title text="Duplicate Check" />
                <ToolbarSpacer />
            </Toolbar>
        </customHeader>
        <content>
            <!-- VBox to manage spacing between tables -->
            <VBox class="sapUiSmallMargin">
                <!-- Current Entry Table -->
                <Table sticky="ColumnHeaders,HeaderToolbar" growing="true" items="{currentRecord>/}" class="sapUiSmallMargin">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Text text="Current Entry" />
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="Material" />
                        </Column>
                        <Column>
                            <Text text="Material Description" />
                        </Column>
                        <Column>
                            <Text text="Material Type" />
                        </Column>
                        <Column>
                            <Text text="Industry Sector" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{currentRecord>Matnr}" />
                                <Text text="{currentRecord>maktx}" />
                                <Text text="{currentRecord>Mtart}" />
                                <Text text="{currentRecord>Mbrsh}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>

                <!-- Spacer for visual separation -->
                <VBox height="10px"></VBox>

                <!-- Potential Duplicates Table -->
                <Table sticky="ColumnHeaders,HeaderToolbar" growing="true" items="{duplicateModel>/}" class="sapUiSmallMargin">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Text text="Potential Duplicates" />
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="Material" />
                        </Column>
                        <Column>
                            <Text text="Request Id" />
                        </Column>
                        <Column>
                            <Text text="Material Description" />
                        </Column>
                        <Column>
                            <Text text="Material Type" />
                        </Column>
                        <Column>
                            <Text text="Industry Sector" />
                        </Column>
                        <Column>
                            <Text text="Score" />
                        </Column>
                        <Column>
                            <Text text="Rule" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{duplicateModel>Matnr}" />
                                <Text text="{duplicateModel>Reqid}" />
                                <Text text="{duplicateModel>Maktx}" />
                                <Text text="{duplicateModel>Mtart}" />
                                <Text text="{duplicateModel>Mbrsh}" />
                                <Text text="{duplicateModel>Score}" />
                                <Text text="{duplicateModel>RuleId}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
        <buttons>
            <Button text="Ignore/Check Duplicates" type="Emphasized" press="onIgnoreDuplicates" visible="{ui>/editable}" />
            <Button text="Cancel" press="onCloseDuplicateCheck" />
        </buttons>
    </Dialog>

</core:FragmentDefinition>
