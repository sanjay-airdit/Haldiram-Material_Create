<core:FragmentDefinition xmlns="sap.m"
    xmlns:sf="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:core="sap.ui.core">
    <Dialog class="sapUiContentPadding" id="idCreateDialog" title="Create Master Data Request">
        <content>
            <smartForm:SmartForm id="idCreateSmartForm" validationMode="Async" editable="true" editTogglable="false">
                <smartForm:Group>
                    <smartForm:GroupElement>
                        <smartField:SmartField id="create:Mtart" value="{Mtart}" textInEditModeSource="ValueList"/>
                    </smartForm:GroupElement>
                </smartForm:Group>
            </smartForm:SmartForm>
        </content>
        <buttons>
            <Button text="Create" type="Emphasized" press="handleCreate"/>
            <Button text="Cancel" press="onCloseDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>